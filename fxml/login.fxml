<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dorm.view.LoginViewController">
   <fx:define>
      <ToggleGroup fx:id="userTypeGroup" />
   </fx:define>
   <children>
      <!-- 顶部占位 -->
      <Region VBox.vgrow="ALWAYS" />

      <!-- 登录卡片容器 -->
      <HBox alignment="CENTER">
         <children>
            <VBox styleClass="login-pane" maxWidth="500" spacing="25" alignment="CENTER">
               <padding>
                  <Insets bottom="40" left="40" right="40" top="40" />
               </padding>
               <children>
                  <!-- 标题区域 -->
                  <Label styleClass="login-title" text="宿舍管理系统" />

                  <!-- 表单区域 -->
                  <VBox spacing="20" alignment="CENTER">
                     <children>
                        <!-- 用户名输入框 -->
                        <VBox spacing="8" alignment="CENTER_LEFT">
                           <children>
                              <Label text="用户名：" styleClass="form-label" />
                              <TextField fx:id="usernameField" styleClass="login-field" maxWidth="350" />
                           </children>
                        </VBox>

                        <!-- 密码输入框 -->
                        <VBox spacing="8" alignment="CENTER_LEFT">
                           <children>
                              <Label text="密码：" styleClass="form-label" />
                              <PasswordField fx:id="passwordField" styleClass="login-field" maxWidth="350" />
                           </children>
                        </VBox>

                        <!-- 按钮区域 -->
                        <HBox alignment="CENTER" spacing="15">
                           <children>
                              <Button fx:id="loginButton" styleClass="login-button" onAction="#handleLogin" text="登录" />
                              <Button fx:id="registerButton" styleClass="secondary-button" onAction="#showRegisterPage" text="注册账号" />
                              <Button fx:id="exitButton" styleClass="exit-button" onAction="#handleExit" text="退出" />
                           </children>
                        </HBox>

                        <!-- 提示信息 -->
                        <Label fx:id="messageLabel" styleClass="message-label" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>

      <!-- 底部占位 -->
      <Region VBox.vgrow="ALWAYS" />
   </children>
</VBox>