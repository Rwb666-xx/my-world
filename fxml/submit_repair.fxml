<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dorm.view.SubmitRepairController" spacing="15.0">
   <children>
      <!-- 标题 -->
      <Label text="提交维修申请" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
         </VBox.margin>
      </Label>

      <!-- 故障位置输入 -->
      <VBox spacing="5.0">
         <children>
            <Label text="故障位置：*" />
            <TextField fx:id="faultLocationField" promptText="例如：A栋101宿舍灯具" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>

      <!-- 故障描述输入 -->
      <VBox spacing="5.0">
         <children>
            <Label text="故障描述：*" />
            <TextArea fx:id="faultDescArea" prefRowCount="4" promptText="请详细描述故障情况..." wrapText="true" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>

      <!-- 联系电话输入 -->
      <VBox spacing="5.0">
         <children>
            <Label text="联系电话：*" />
            <TextField fx:id="contactPhoneField" promptText="请输入您的联系电话" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>

      <!-- 提示信息 -->
      <Label fx:id="messageLabel" textFill="RED" wrapText="true">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </Label>

      <!-- 按钮区域 -->
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" prefWidth="80.0" text="提交" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="80.0" text="取消" />
            <Button fx:id="viewApplicationsButton" mnemonicParsing="false" onAction="#handleViewApplications" prefWidth="120.0" text="查看我的申请" visible="false" />
         </children>
         <VBox.margin>
            <Insets bottom="15.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>